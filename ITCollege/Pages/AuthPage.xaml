<Page x:Class="ITCollege.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ITCollege.Pages"
      mc:Ignorable="d"
      d:DesignHeight="350"
      d:DesignWidth="800"
      Title="AuthPage">

    <Grid >
        <TextBox x:Name="LoginTB"
                 Margin="300,100,300,0"
                 Height="30"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Width="200" Background="#FF6107FF" Foreground="White" />
        <PasswordBox x:Name="PassPB"
                     Margin="300,170,300,0"
                     Height="30"
                     VerticalAlignment="Top"
                     HorizontalContentAlignment="Center"
                     HorizontalAlignment="Center"
                     Width="200" 
                     Background="#FF6107FF" Foreground="#FFF9F9F9" />
        <Button x:Name="SignInBT"
                Margin="300,220,0,0"
                Content="Войти"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="200"
                Click="SignInBT_Click" Background="#FFEA0E7C" Foreground="White" />
    </Grid>
</Page>
